@model IEnumerable<LMSProfile.Models.CategoryModel>

@{
    ViewBag.Title = "GetAllCategory";
    Layout = "~/Views/Shared/AfterLoginView.cshtml";
}

<br />
<br />
<p>
    @Html.ActionLink("Add New Category", "AddCategory")
</p>
<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.catId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.catName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.catType)
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.catId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.catName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.catType)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditCatDetails", new { id = item.catId }) |
                @Html.ActionLink("Delete", "DeleteCat", new { id = item.catId }, new { onclick = "return confirm('Are sure wants to delete?');" })
            </td>
        </tr>
    }

</table>
